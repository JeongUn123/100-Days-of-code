#print(did_users)
# TODO-4: Compare bids in dictionary
#Loop Dictionary and find highest bid
for bidder in did_users:
    # str -> integer
    bid = int(did_users[bidder])

    #fine highest bid algorithm (First hightest bid value is 0 because of To directly assign the first value of the dictionary to the highest bid variable )
    if bid > highest_bid:
        highest_bid = bid
        winner = bidder
